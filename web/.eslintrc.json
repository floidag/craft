{
  "parser": "babel-eslint",
  "extends": [
    "eslint-config-prettier"
  ],
  "rules": {
    "valid-jsdoc": "off",
    "max-len": "off",
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": true,
      "semi": false
    }],
    "no-console": "off",
    "semi": ["error", "never"]
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "prettier"
  ]
}
